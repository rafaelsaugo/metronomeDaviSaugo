<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_launcher_background"
    tools:context=".fragments.MechanicalMetronomeFragment">

    <ImageView
        android:id="@+id/metronome"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/ic_wooden_metronome" />

    <ImageView
        android:id="@+id/metronomeArmView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/ic_metronome_arm"
        app:srcCompat="@drawable/ic_metronome_arm" />

    <ImageView
        android:id="@+id/woodLid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/ic_wooden_metronome_lid" />

</FrameLayout>